<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="https://github.com/avaloniaui"
        xmlns:vm="clr-namespace:DrawMat.ViewModels"
        x:Class="DrawMat.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="DrawMat"
        Width="400" Height="200">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Canvas Background="White" x:Name="DrawArea"        PointerPressed="Canvas_PointerPressed"
 PointerMoved="Canvas_PointerMoved"        PointerReleased="Canvas_PointerReleased" />
</Window>

